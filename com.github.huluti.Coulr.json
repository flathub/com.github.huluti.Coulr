{
    "app-id": "com.github.huluti.Coulr",
    "runtime": "org.gnome.Platform",
    "runtime-version": "47",
    "sdk": "org.gnome.Sdk",
    "command": "coulr",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "modules": [
        {
            "name": "libportal",
            "buildsystem": "meson",
            "config-opts": [
                "-Dbackend-gtk4=enabled",
                "-Ddocs=false"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/flatpak/libportal/releases/download/0.9.0/libportal-0.9.0.tar.xz",
                    "sha256": "113910f06f39387328805397053d20c7acafb7388d8e6cd5e06e05efb9690735",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/flatpak/libportal/releases/latest",
                        "version-query": ".tag_name",
                        "url-query": ".assets[] | select(.name==\"libportal-\" + $version + \".tar.xz\") | .browser_download_url"
                    }
                }
            ]
        },
        {
            "name": "coulr",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Huluti/Coulr",
                    "tag": "2.1.0",
                    "commit": "3a515a0169f7fe59eac7fb80b522ae77e3cc9714"
                }
            ]
        }
    ]
}
